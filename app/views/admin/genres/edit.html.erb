<h2>ジャンル編集</h2>

<div class="row">
    <div class="col-xs-6">
        <%= form_for @genre, url: admin_genre_path, html: {class:'form-inline'} do |f| %>
            <% if @genre.errors.any? %>
                  <div id="error_explanation">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2><%= @genre.errors.count %>件のエラーが発生しました。</h2>
                            </div>
                            <div class="panel-body">
                                <ul>
                                    <% @genre.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% end %>
            <div class="form-group">
                <%= f.label :name,"ジャンル"%>
                <%= f.text_field :name %>
            </div>

            <div class="form-group">
                <div class="radio-inline">
                    <%= f.radio_button :is_active, :有効, checked: "checked" %>
                    <%= f.label :有効 %>
                </div>
                <div class="radio-inline">
                    <%= f.radio_button :is_active, :無効 %>
                    <%= f.label :無効 %>
                </div>
            </div>
            <div class="form-group">
                <%= f.submit "変更を保存する",class: "btn btn-primary"%>
            </div>
        <% end %>
    </div>
</div>