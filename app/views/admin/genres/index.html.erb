<h2>ジャンル一覧・追加</h2>

<div class="row">
    <div class="col-xs-6">
        <%= form_for @genre, url: admin_genres_path, html: {class:'form-inline'} do |f| %>
            <div class="form-group">
                <%= f.label :name,"ジャンル"%>
                <%= f.text_field :name %>
            </div>

            <div class="form-group">
                <div class="radio-inline">
                    <%= f.radio_button :is_active, :有効, checked: "checked" %>
                    <%= f.label :有効 %>
                </div>
                <div class="radio-inline">
                    <%= f.radio_button :is_active, :無効 %>
                    <%= f.label :無効 %>
                </div>
            </div>
            <div class="form-group">
                <%= f.submit "追加",class: "btn btn-primary"%>
            </div>
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-xs-6">
        <table class="table">
        <thead class="thead-dark">
            <tr>
            <th scope="col">ジャンル</th>
            <th scope="col">状態</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre|%>
                <tr>
                <td><%= genre.name%></td>
                <td><%= genre.is_active %></td>
                <td><%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-primary" %></td>
                </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>

