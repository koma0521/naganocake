<div class="row">
<%= form_for @item,url: admin_item_path do |f|%>
    <% if @item.errors.any? %>
                  <div id="error_explanation">
                      <div class="panel panel-default">
                              <div class="panel-heading">
                                  <h2><%= @genre.errors.count %>件のエラーが発生しました。</h2>
                              </div>
                              <div class="panel-body">
                                  <ul>
                                      <% @genre.errors.full_messages.each do |message| %>
                                      <li><%= message %></li>
                                      <% end %>
                                  </ul>
                              </div>
                        </div>
                    </div>
    <% end %>
    <%= f.attachment_field :image %>
    <%= f.text_field :name%>
    <%= f.text_area :introduction %>
    <%= f.select :genre_id, [["ケーキ",1],["プリン",2],["焼き菓子",3],["キャンディ",4]]%>
    <%= f.text_field :price %>
    <%= f.select :is_active, [["販売中","販売中"],["売り切れ中","売り切れ中"]]%>
    <%= f.submit "変更を保存",class: "btn btn-primary"%>
<% end %>
</div>