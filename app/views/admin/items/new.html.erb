<h2>商品新規登録</h2>

<%= form_for @item,url: admin_items_path do |f|%>
    <%= f.attachment_field :image %>
    <%= f.text_field :name%>
    <%= f.text_area :introduction %>
    <%= f.select :genre_id, [["ケーキ",1],["プリン",2],["焼き菓子",3],["キャンディ",4]]%>
    <%= f.text_field :price %>
    <%= f.select :is_active, [["販売中","販売中"],["売り切れ中","売り切れ中"]]%>
    <%= f.submit "新規登録",class: "btn btn-primary"%>
<% end %>