<div class="row">
     <h2>商品詳細</h2>
</div>

<div class="row">   
    <div class="col-md-4 offset-md-1">
        <%= image_tag attachment_url(@item, :image, :fill, 300, 200, format: "jpg") %>
    </div>
    <div class="col-md-3">
        <p><span class="mr-3">商品名</span><%= @item.name%></p>
        <p><span class="mr-3">商品説明</span><%= @item.introduction%></p>
        <p><span class="mr-3">ジャンル</span><%= @item.genre.name%></p>
        <p><span class="mr-3">税込み価格（税抜き価格）</span><%= @item.tax_price%>(<%= @item.price.to_s(:delimited)%>)円</p>
        <p><span class="mr-3">販売ステータス</span><%= @item.sale_status%></p>
    </div>
</div>
<p class="text-right mr-5"><%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-primary admin_item_to_edit"%></p>