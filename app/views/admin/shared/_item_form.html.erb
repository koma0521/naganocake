

<%= form_for item,url: path do |f|%>

 <%= render partial: "layouts/error_messages",locals: {model: item}%> 

    <div class="form-group row mt-3">
        <%= f.attachment_field :image,class: "form-control-file" %>
    </div>

    <div class="form-group row">
        <%= f.label :name, "商品名",class: "col-sm-2 col-form-label"%>
        <div class="col-sm-7">
            <%= f.text_field :name,class: "form-control"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :introduction, "商品説明",class: "col-sm-2 col-form-label"%>
        <div class="col-sm-7">
            <%= f.text_area :introduction,class: "form-control form-control-lg" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :genre_id,"ジャンル",class: "col-sm-2 col-form-label"%>
        <div class="col-sm-3">
            <%= f.select :genre_id, [["ケーキ",1],["プリン",2],["焼き菓子",3],["キャンディ",4]],{},class: "form-control"%>
        </div>
    </div>  

    <div class="form-group row">
        <%= f.label :price,"税抜き価格",class: "col-sm-2 col-form-label"%>
        <div class="col-sm-7 d-flex flex-row">
            <%= f.text_field :price,class: "form-control" %><span class="span-enn">円</span>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :sale_status, "販売ステータス",class: "col-sm-2 col-form-label"%>
        <div class="col-sm-3">
            <%= f.select :sale_status, Item.sale_statuses.keys,{},class: "form-control" %>
        </div>
    </div>

    <div class="row">
        <div class="offset-sm-2">
        <%= f.submit "#{btn}",class: "btn btn-primary"%>
        </div>
    </div>
<% end %>