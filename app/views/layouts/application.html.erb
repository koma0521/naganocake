<!DOCTYPE html>
<html>
  <head>
    <title>DwcRailsAppTemplate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <% if end_user_signed_in? %>
            <%= link_to "Nagano",items_path,class: "navbar-brand"%>
          <% else %>
            <%= link_to "Nagano",top_path,class: "navbar-brand"%>
          <% end %>

          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <% if end_user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item mr-2">
                <%= link_to "マイページ",mypage_path,class: "btn btn-primary "%>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "商品一覧",items_path,class: "btn btn-primary" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "カート",cart_items_path,class: "btn btn-primary"%>
              </li>
              <li class="nav-item">
                <%= link_to  "ログアウト",destroy_end_user_session_path,method: :delete,class: "btn btn-primary" %>
              </li>
            </ul>
            <% elsif admin_signed_in?%>

            <ul class="navbar-nav">
              <li class="nav-item mr-2">
                <%= link_to "商品一覧",admin_items_path,class: "btn btn-primary"%>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "会員一覧",admin_end_users_path,class: "btn btn-primary"%>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "注文履歴一覧",admin_orders_path,class: "btn btn-primary" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to "ジャンル一覧",admin_genres_path,class: "btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to  "ログアウト",destroy_admin_session_path,method: :delete,class: "btn btn-primary" %>
              </li>
            </ul>
            
            <% else %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "About",about_path,class: "btn btn-primary mr-2"%>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧",items_path,class: "btn btn-primary mr-2" %>
              </li>
              <li class="nav-item mr-2">
                <%= link_to  "新規登録",new_end_user_registration_path,class: "btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to  "ログイン",new_end_user_session_path,class: "btn btn-primary" %>
              </li>
            </ul>
            <% end %>
          </div>
        </nav>
    </header>
    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
