<h2>配送先編集</h2>
<div class="row">
    <div class="col-md-7">
        <%= form_for @address do |f|%>
            <%= render partial: "layouts/error_messages",locals: {model: @address}%>

            <table class="table table-borderless">
                <tr>
                    <td><%= f.label :postal_code,"郵便番号（ハイフンなし）" %></td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                                <%= f.text_field :postal_code,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :address,"住所" %></td>
                    <td><%= f.text_field :address,class: "form-control" %></td>
                </tr>
                <tr>
                    <td><%= f.label :name,"宛名" %></td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                                <%= f.text_field :name,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <div class="row">
                            <div class="offset-md-8">
                                <%= f.submit "編集する",class: "btn btn-primary btn-sm" %>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        <%end%>
    </div>
</div>