<h2>配送先登録/一覧</h2>
<div class= "row">
    <div class="col-md-7">
    <%= form_for @address do |f|%>
        <%= render partial: "layouts/error_messages",locals: {model: @address}%> 

        <table class="table table-borderless">
            <tr>
                <td><%= f.label :postal_code,"郵便番号（ハイフンなし）" %></td>
                <td>
                    <div class="row">
                        <div class="col-md-6">
                            <%= f.text_field :postal_code,class: "form-control" %>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td><%= f.label :address,"住所" %></td>
                <td><%= f.text_field :address,class: "form-control" %></td>
            </tr>
            <tr>
                <td><%= f.label :name,"宛名" %></td>
                <td>
                    <div class="row">
                        <div class="col-md-6">
                            <%= f.text_field :name,class: "form-control" %>
                        </div>
                        <div class="offset-md-2">
                            <%= f.submit "登録する",class: "btn btn-success" %>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    <%end%>
    </div>
</div>

<table class="table table-bordered mt-5">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @addresses.each do |address| %>
            <tr>
                <td><%= address.postal_code%></td>
                <td><%= address.address%></td>
                <td><%= address.name%></td>
                <td><%= link_to "編集する",edit_address_path(address),class: "btn btn-success mr-2" %> 
                    <%= link_to "削除する",address_path(address),method: :delete,class: "btn btn-primary" %>
                </td>
            </tr>
        <% end %>
    </tbody>

</table>