<div class="row">
    <div class="col-md-4">
        <h2>ショッピングカート</h2>
    </div>
    <div class="offset-md-5">
        <%= link_to "カートを空にする",destroy_all_path,method: :delete,class: "btn btn-danger btn-sm"%>
    </div>
</div>
<% if flash[:danger]%>
    <p class="alert alert-danger"><%= flash[:danger]%><p>
<% end %>

<table class="table table-bordered mt-3">
    
    <thead>
        <tr>
            <td>商品名</td>
            <td>単価（税込み）</td>
            <td>数量</td>
            <td>小計</td>
            <% if @end_user.cart_items.exists? %>
                <td></td>
            <% end %>
        </tr>
    </thead>
    <tbody>
         <% @end_user.cart_items.each do |cart_item|%>
            <tr>
                
                    <td><%= image_tag attachment_url(cart_item.item, :image, :fill, 30, 30, format: "jpg") %>
                        <%= cart_item.item.name%>
                    </td>
                    <td><%= cart_item.item.tax_price%></td>
                    <td>
                        <%= form_for cart_item,url: cart_item_path(cart_item) do |f|%>
                            <%= f.number_field :amount%><%= f.submit "変更"%>
                        <% end %>
                    </td>
                    <td><%= cart_item.subtotal %></td>
                    <td><%= link_to "削除する",cart_item_path(cart_item),method: :delete,class: "btn btn-danger"%></td>
                
            </tr>
        <% end %>
    </tbody>
</table>

<div class="row mt-5">
    
    <div class="aciton">
        <%= link_to "買い物を続ける",items_path,class: "btn btn-primary"%>
    </div>

    <div class="offset-md-9">
        <table class="table table-bordered">
            <tr>
                <td>合計金額</td>
                <td><%= @end_user.total_price.to_i%></td>
            </tr>
        </table>
    </div>
</div>

<div class="text-center mt-5">
    <%= link_to "情報入力に進む",new_order_path,class: "btn btn-success btn-lg"%>
</div>