<h2>登録情報編集</h2>
<div class="row">
    <div class="col-md-8">
        <%= form_for @end_user do |f|%>
            <table class="table table-borderless">
                <tr>
                    <td><%= f.label :last_name, "名前"%></td>
                    <td>
                        <div class="form-row">
                            <div class="col">
                                <%= f.label :last_name,"（姓）"%>
                                <%= f.text_field :last_name,class: "form-control" %>
                            </div>

                            <div class="col">
                                <%= f.label :first_name,"（名）"%>
                                <%= f.text_field :first_name,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><%= f.label :last_name_kana, "フリガナ"%></td>
                    <td>
                        <div class="form-row">

                            <div class="col">
                                <%= f.label :first_name_kana,"（セイ）"%>
                                <%= f.text_field :last_name_kana,class: "form-control" %>
                            </div>

                            <div class="col">
                                <%= f.label :first_name_kana,"（メイ）"%>
                                <%= f.text_field :first_name_kana,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>メールアドレス</td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                            <%= f.email_field :email,class: "form-control" %>
                            </div>
                        </div>

                    </td>
                </tr>

                <tr>
                    <td>郵便番号（ハイフンなし）</td>
                    <td>
                        <div class="row">
                            <div class="col-md-6">
                                <%= f.text_field :postal_code,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>住所</td>
                    <td><%= f.text_field :address,class: "form-control" %></td>
                </tr>

                <tr>
                    <td>電話番号(ハイフンなし)</td>
                    <td>
                         <div class="row">
                            <div class="col-md-6">
                                <%= f.text_field :telephone_number,class: "form-control" %>
                            </div>
                        </div>
                    </td>
                </tr>

            </table>
            <div class="row">
                <div class="offset-md-3">
                    <%= f.submit "編集内容を保存する",class: "btn btn-primary"%>
                </div>
                <div class="offset-md-3">
                    <%= link_to "退会する", unsubscribe_path,class: "btn btn-danger"%>
                </div>
            </div>
        <% end %>
    </div>
</div>

