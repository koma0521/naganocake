<h2>マイページ</h2>


<h2>登録情報 </h2>
<%= link_to "編集する",edit_end_user_path(@end_user)%>

<table class="table table-bordered ">
    <tr>                        
        <td>氏名</td>
        <td><%= @end_user.name %></td>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= @end_user.name_kana%></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= @end_user.postal_code%></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= @end_user.address%></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= @end_user.telephone_number%></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= @end_user.email%></td>
    </tr>
</table>

<h2>配送先<h2>
<%= link_to "一覧を見る",addresses_path,class: "btn btn-primary" %>