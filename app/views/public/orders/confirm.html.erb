<h2>注文情報確認</h2>

<div class="row">
    <div class="col-md-6">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込み）</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart_item|%>
                <tr>
                    <td><%= image_tag attachment_url(cart_item.item, :image, :fill, 30, 30, format: "jpg") %>
                        <%= cart_item.item.name %>
                    </td>
                    <td><%= cart_item.tax_price.to_s(:delimited) %></td>
                    <td><%= cart_item.amount %></td>
                    <td><%= cart_item.subtotal %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    </div>

    <div class="col-md-4 offset-md-1">
    <table class="table table-bordered">
        <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost%></td>
        </tr>
        <tr>
            <td>商品合計</td>
            <td><%= current_end_user.total_price%></td>
        </tr>
        <tr>
            <td>請求金額</td>
            <% @billing_amount = current_end_user.total_price.to_i + @order.shipping_cost.to_i%>
            <td><%= @billing_amount %></td>
        </tr>
    </table>
    </div>
</div>


<p><span class="font-size-md mr-2 mt-4 mb-3">お支払い方法</span><%=  @order.payment_method%></p>

<p><span class="font-size-md mr-2">お届け先</span>
    <%= @order.postal_code%>
    <%= @order.address%>
    <br><span class="confirm-span"><%= @order.name%></span>
</p>


<%= form_for @order,url:orders_path do |f| %>
    <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
  <%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
  <%= f.hidden_field :address, :value => "#{@order.address}" %>
  <%= f.hidden_field :name, :value => "#{@order.name}" %>
  <%= f.hidden_field :totalpayment, :value => "#{@billing_amount}" %>
  <div class="text-center">
    <%= f.submit "購入確定する",class: "btn btn-success"%>
  </div>
<% end %>