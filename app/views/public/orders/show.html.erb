<h2>注文履歴詳細</h2>

<h2>注文情報</h2>
<table>
    <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
    </tr>
    <tr>
        <td>配送先</td>
        <td>
            <%= @order.postal_code%><br>
            <%= @order.address%><br>
            <%= @order.name%><br>
        </td>
    </tr>
    <tr>
        <td>支払い方法</td>
        <td><%= @order.payment_method%></td>
    </tr>
    <tr>
        <td>ステータス</td>
        <td><%= @order.status%></td>
    </tr>
</table>

<table>
    <tr>
        <td>商品合計</td>
        <td><%= @order.total_price%></td>
    </tr>
    <tr>
        <td>配送料</td>
        <td><%= @order.shipping_cost%></td>
    </tr>
    <tr>
        <td>ご請求額</td>
        <% @billing_amount = @order.total_price + @order.shipping_cost%>
        <td><%= @billing_amount %></td> 
    </tr>
</table>

<table>
    <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    </thead>
    <% @order.order_details.each do |detail|%>
        <tr>
            <td><%= detail.item.name %></td>
            <td><%= detail.price %></td>
            <td><%= detail.amount %></td>
            <td><%= detail.subtotal %></td>
        </tr>
    <% end %>
</table>