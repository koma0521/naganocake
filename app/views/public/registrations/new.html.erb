<h2>新規会員登録</h2>
<div class="row">
  <div class="col-md-9">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :last_name,"名前" %></td>
          <td>
            <div class="form-row">
              <div class="col">
                <%= f.label :last_name, "（姓）" %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control" %>
              </div>

              <div class="col">
                <%= f.label :first_name,"(名)" %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :last_nama_kana, "フリガナ"%>
          <td>
            <div class="form-row">
              <div class="col">
                <%= f.label :last_name_kana,"（セイ）" %>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name_kana",class: "form-control" %>
              </div>

              <div class="col">
                <%= f.label :first_name_kana,"（メイ）" %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "last_name_kana",class: "form-control" %>
              </div>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :email %></td>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
          <td>
            <div class="field">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",class: "form-control" %>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :address %></td>
          <td>
            <div class="field">
              <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "form-control" %>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :telephone_number %></td>
          <td>
            <div class="field">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",class: "form-control" %>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :password,"パスワード(6文字以上)" %></td>
          <td>
            <div class="field">
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
            </div>
          </td>
        </tr>

        <tr>
          <td><%= f.label :password_confirmation,"パスワード（確認用）" %></td>
          <td>
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
            </div>
          </td>
        </tr>
      </table>
      <div class="actions registraions-btn">
          <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
  
</div>
<h5>すでに登録済みの方</h5>
<p><%= link_to "こちら",new_end_user_session_path%>からログインしてください。<p>

